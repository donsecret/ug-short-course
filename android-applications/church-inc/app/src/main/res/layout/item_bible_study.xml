<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:padding="8dp"
                                                   android:layout_height="wrap_content">

    <!--Title-->
    <TextView android:layout_width="match_parent"
              android:id="@+id/sermon_name"
              tools:text="The Prodigal Son\nPart 1"
              android:fontFamily="@font/laila_semibold"
              android:textSize="18sp"
              android:maxLines="2"
              android:ellipsize="end"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent"
          android:id="@+id/separator"
          app:layout_constraintTop_toBottomOf="@id/sermon_name"
          android:layout_height="1dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:background="@android:color/darker_gray"/>

    <!--Key Text-->
    <TextView android:layout_width="match_parent"
              android:id="@+id/sermon_keytext"
              android:fontFamily="@font/laila_medium"
              android:textSize="16sp"
              android:maxLines="1"
              android:ellipsize="end"
              app:layout_constraintTop_toBottomOf="@id/separator"
              tools:text="Key Text: Matt 22:14-20"
              android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>