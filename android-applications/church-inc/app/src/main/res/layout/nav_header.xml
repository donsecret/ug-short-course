<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:paddingTop="72dp"
              android:layout_height="180dp">

    <ImageView android:layout_width="56dp"
               android:src="@drawable/avatar_header"
               android:layout_height="56dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:id="@+id/user_avatar"
               android:layout_marginStart="16dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  tools:text="Dennis Bilson"
                  android:fontFamily="@font/laila_medium"
                  android:textSize="20sp"
                  android:id="@+id/user_full_name"
                  app:layout_constraintTop_toTopOf="@id/user_avatar"
                  app:layout_constraintStart_toEndOf="@id/user_avatar"
                  android:layout_marginStart="12dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  tools:text="dummy@domain.com"
                  android:fontFamily="@font/laila"
                  android:textSize="14sp"
                  android:id="@+id/user_email"
                  app:layout_constraintTop_toBottomOf="@id/user_full_name"
                  app:layout_constraintStart_toEndOf="@id/user_avatar"
                  android:layout_marginStart="12dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  tools:text="~0258963145"
                  android:fontFamily="@font/laila"
                  android:textSize="14sp"
                  android:id="@+id/user_phone"
                  app:layout_constraintTop_toBottomOf="@id/user_email"
                  app:layout_constraintStart_toEndOf="@id/user_avatar"
                  android:layout_marginStart="12dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>