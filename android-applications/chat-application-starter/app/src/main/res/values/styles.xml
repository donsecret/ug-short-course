<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="ChatAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/chat_background</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!--Custom Button-->
    <style name="ChatAppTheme.Button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">@dimen/padding_normal</item>
        <item name="iconPadding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/padding_normal</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:padding">@dimen/padding_normalish</item>
    </style>

    <style name="ChatAppTheme.Button.Other" parent="ChatAppTheme.Button">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--Custom toolbar-->
    <style name="ChatAppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFeatureSettings">smcp,onum</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <dimen name="padding_normalish">12dp</dimen>
</resources>
