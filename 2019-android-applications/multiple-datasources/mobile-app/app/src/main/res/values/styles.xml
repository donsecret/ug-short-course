<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="shapeAppearanceSmallComponent">@style/AppTheme.SmallComponents</item>
        <item name="shapeAppearanceMediumComponent">@style/AppTheme.MediumComponents</item>
        <item name="shapeAppearanceLargeComponent">@style/AppTheme.LargeComponents</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="textAppearanceHeadline5">@style/AppTheme.H5</item>
        <item name="textAppearanceHeadline6">@style/AppTheme.H6</item>
        <item name="textAppearanceBody1">@style/AppTheme.B1</item>

        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
